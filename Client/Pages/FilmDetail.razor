<div>
    <p>Title: <b>@Film.Title</b></p>
    <p>Release Date: @Film.ReleaseDate.ToString("dd/MM/yyyy")</p>
    @if (ShowButtons)
    {
        <div>
            <button @onclick="@(() => DeleteFilm.InvokeAsync(Film))">Delete</button>
        </div>
    }
    <hr />
</div>

@code {
    [Parameter]
    public Film Film { get; set; }

    [Parameter]
    public bool ShowButtons { get; set; }

    [Parameter]
    public EventCallback<Film> DeleteFilm { get; set; }
}
